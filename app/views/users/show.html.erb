<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>


    <h3>あなたがフォローしている人</h3>  
    <% if @user.following_users.any? %>  
    <% @user.following_users.each do |user| %>
        <div class="row">
          <%= user.name %>
          <%= link_to gravatar_for(user, size: 50), user_path(user) %>
        </div>
    <% end %>
    <% end %>
  
    <h3>あなたをフォローしている人</h3>
    <% if @user.followed_users.any? %>  
    <% @user.followed_users.each do |user| %>
        <div class="row">
          <%= user.name %>
          <%= link_to gravatar_for(user, size: 50), user_path(user) %>
        </div>
    <% end %>
    <% end %>
  </div>